layout {
    default_tab_template {
      children
      pane size=1 borderless=true {
        plugin location="zellij:compact-bar"
      }
    }

  tab name="Code" {
    pane focus=true borderless=true name="Code" command="nvim"
  }

  tab name="Terminal" split_direction="vertical" {
    pane name="Terminal"
  }
}
