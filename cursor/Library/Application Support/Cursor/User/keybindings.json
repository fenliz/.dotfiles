[
	// -- Tabs --
	{
		"key": "shift+h",
		"command": "workbench.action.previousEditorInGroup",
		"when": "editorTextFocus && vim.active && vim.mode == 'Normal'"
	},
	{
		"key": "shift+l",
		"command": "workbench.action.nextEditorInGroup",
		"when": "editorTextFocus && vim.active && vim.mode == 'Normal'"
	},

	// -- Navigation --
	{
		"key": "ctrl+k",
		"command": "workbench.action.navigateUp",
		"when": "editorFocus"
	},
	{
		"key": "ctrl+j",
		"command": "workbench.action.navigateDown",
		"when": "editorFocus"
	},
	{
		"key": "ctrl+h",
		"command": "workbench.action.navigateLeft",
		"when": "editorFocus"
	},
	{
		"key": "ctrl+l",
		"command": "workbench.action.navigateRight",
		"when": "editorFocus"
	},

	// -- Hover --
	{
		"key": "shift+k",
		"command": "editor.action.showHover",
		"when": "editorTextFocus && vim.active && vim.mode == 'Normal'"
	},
	{
		"key": "h",
		"command": "editor.action.scrollLeftHover",
		"when": "editorHoverFocused"
	},
	{
		"key": "j",
		"command": "editor.action.scrollDownHover",
		"when": "editorHoverFocused"
	},
	{
		"key": "k",
		"command": "editor.action.scrollUpHover",
		"when": "editorHoverFocused"
	},
	{
		"key": "l",
		"command": "editor.action.scrollRightHover",
		"when": "editorHoverFocused"
	},
	{
		"key": "ctrl+u",
		"command": "editor.action.pageUpHover",
		"when": "editorHoverFocused"
	},
	{
		"key": "ctrl+d",
		"command": "editor.action.pageDownHover",
		"when": "editorHoverFocused"
	},

	// -- LSP --
	{
		"key": "ctrl+]",
		"command": "editor.action.marker.next",
		"when": "editorFocus"
	},
	{
		"key": "ctrl+[",
		"command": "editor.action.marker.prev",
		"when": "editorFocus"
	},

	// -- Terminal -
	{
		"key": "cmd+t",
		"command": "workbench.action.togglePanel"
	},
	{
		"key": "cmd+w",
		"command": "workbench.action.terminal.kill",
		"when": "terminalIsOpen && terminalFocus"
	},
	{
		"key": "cmd+n",
		"command": "workbench.action.terminal.new",
		"when": "terminalIsOpen && terminalFocus"
	},
	{
		"key": "ctrl+shift+j",
		"command": "workbench.action.terminal.focusNext",
		"when": "terminalIsOpen && terminalFocus"
	},
	{
		"key": "ctrl+shift+k",
		"command": "workbench.action.terminal.focusPrevious",
		"when": "terminalIsOpen && terminalFocus"
	},

	// -- Explorer --
	{
		"key": "cmd+e",
		"command": "workbench.view.explorer",
	},
	{
		"key": "enter",
		"command": "explorer.openAndPassFocus",
		"when": "filesExplorerFocus && !inputFocus"
	},
	{
		"key": "a",
		"command": "explorer.newFile",
		"when": "filesExplorerFocus && !inputFocus"
	},
	{
		"key": "d",
		"command": "deleteFile",
		"when": "filesExplorerFocus && !inputFocus"
	},
	{
		"key": "y",
		"command": "filesExplorer.copy",
		"when": "filesExplorerFocus && !inputFocus"
	},
	{
		"key": "x",
		"command": "filesExplorer.cut",
		"when": "filesExplorerFocus && !inputFocus"
	},
	{
		"key": "p",
		"command": "filesExplorer.paste",
		"when": "filesExplorerFocus && !inputFocus"
	},
	{
		"key": "r",
		"command": "renameFile",
		"when": "filesExplorerFocus && !inputFocus"
	},
	{
		"key": "q",
		"command": "workbench.action.closeSidebar",
		"when": "filesExplorerFocus && !inputFocus"
	},

	// -- Git --
	{
		"command": "workbench.view.scm",
		"key": "cmd+g"
	},
	{
		"key": "cmd+k",
		"command": "cursor.generateGitCommitMessage",
		"when": "!editorFocus && workbench.scm.active && inputFocus"
	},
	{
		"key": "ctrl+j",
		"command": "workbench.scm.action.focusNextResourceGroup",
		"when": "!editorFocus && workbench.scm.active && inputFocus"
	},
	{
		"key": "ctrl+k",
		"command": "workbench.scm.action.focusPreviousInput",
		"when": "!editorFocus && workbench.scm.active && !inputFocus"
	},

	// -- Search --
	{
		"key": "cmd+f",
		"command": "closeFindWidget",
		"when": "editorFocus && editorIsOpen && findWidgetVisible"
	},
	{
		"key": "cmd+shift+f",
		"command": "editor.action.startFindReplaceAction",
		"when": "editorFocus && editorIsOpen"
	},
	{
		"key": "ctrl+n",
		"command": "editor.action.nextMatchFindAction",
		"when": "editorFocus && findWidgetVisible"
	},
	{
		"key": "ctrl+p",
		"command": "editor.action.previousMatchFindAction",
		"when": "editorFocus && findWidgetVisible"
	},
	{
		"key": "ctrl+j",
		"command": "search.action.focusSearchList",
		"when": "searchInputBoxFocus"
	},
	{
		"key": "ctrl+k",
		"command": "runCommands",
		"args": {
			"commands": [
				"search.action.focusSearchFromResults",
				"search.focus.previousInputBox",
				"search.focus.previousInputBox"
			]
		},
		"when": "searchResultListFocused"
	},

	// -- Removals
	{
		"key": "cmd+j",
		"command": "-workbench.action.togglePanel"
	}

	// -- Other --
]
