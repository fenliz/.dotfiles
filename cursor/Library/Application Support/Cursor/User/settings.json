{
	// -- AI
	"cursor.composer.shouldChimeAfterChatFinishes": true,
	"cursor.composer.shouldAllowCustomModes": true,
	"cursor.diffs.useCharacterLevelDiffs": true,
	"cursor.terminal.usePreviewBox": true,

	// -- General --
	"update.releaseTrack": "prerelease",
	"extensions.ignoreRecommendations": true,

	// -- Editor --
	"breadcrumbs.enabled": false,
	"editor.cursorSurroundingLines": 8,
	"editor.folding": false,
	"editor.formatOnSave": true,
	"editor.scrollbar.horizontal": "hidden",
	"editor.scrollbar.vertical": "hidden",
	"editor.smoothScrolling": true,
	"editor.tabSize": 2,
	"editor.cursorSmoothCaretAnimation": "on",
	"editor.showFoldingControls": "never",

	// -- Accessibility --
	"accessibility.signalOptions.volume": 0,

	// -- Font --
	"editor.fontLigatures": true,
	"editor.fontFamily": "JetBrainsMono Nerd Font Mono",

	// -- Files --
	"files.trimFinalNewlines": true,
	"files.trimTrailingWhitespace": true,

	// -- Search --
	"search.smartCase": true,
	"find-it-faster.general.showMaximizedTerminal": true,
	"find-it-faster.general.restoreFocusTerminal": true,

	// -- Projects --
	"projectManager.git.baseFolders": ["~/Development", "~/.dotfiles"],

	// -- Formatting --
	"editor.defaultFormatter": "esbenp.prettier-vscode",

	// -- Terminal --
	"terminal.integrated.smoothScrolling": true,
	"terminal.integrated.enablePersistentSessions": true,
	"terminal.integrated.gpuAcceleration": "on",
	"terminal.integrated.tabs.title": "${shellPromptInput}",

	// -- Vim --
	"extensions.experimental.affinity": { "vscodevim.vim": 1 },
	"vim.highlightedyank.enable": true,
	"vim.leader": "<Space>",
	"vim.showmodename": false,
	"vim.sneak": true,
	"vim.easymotion": true,
	"vim.normalModeKeyBindings": [
		// Search
		{
			"before": ["leader", "f", "f"],
			"commands": ["find-it-faster.findFiles"]
		},
		{
			"before": ["leader", "s", "g"],
			"commands": ["find-it-faster.findWithinFiles"]
		},
		{
			"before": ["leader", "s", "r"],
			"commands": ["find-it-faster.resumeSearch"]
		},
		{
			"before": ["leader", "s", "s"],
			"commands": ["workbench.action.gotoSymbol"]
		},

		// Save
		{
			"before": ["leader", "w"],
			"commands": ["workbench.action.files.save"]
		},

		// LSP
		{
			"before": ["leader", "c", "r"],
			"commands": ["editor.action.rename"]
		},
		{
			"before": ["leader", "c", "a"],
			"commands": ["editor.action.codeAction"]
		},
		{
			"before": ["leader", "g", "r"],
			"commands": ["editor.action.goToReferences"]
		},
		{
			"before": ["leader", "g", "d"],
			"commands": ["editor.action.revealDefinition"]
		}
	],
	"vim.visualModeKeyBindings": [
		// Search
		{
			"before": ["leader", "f", "f"],
			"commands": ["find-it-faster.findFiles"]
		},
		{
			"before": ["leader", "s", "g"],
			"commands": ["find-it-faster.findWithinFiles"]
		},

		// Indentation
		{
			"before": ["<"],
			"commands": ["editor.action.outdentLines"]
		},
		{
			"before": [">"],
			"commands": ["editor.action.indentLines"]
		},

		// Move lines
		{
			"before": ["J"],
			"commands": ["editor.action.moveLinesDownAction"]
		},
		{
			"before": ["K"],
			"commands": ["editor.action.moveLinesUpAction"]
		}
	],

	// -- Git --
	"git.autofetch": true,

	// -- Workbench --
	"workbench.colorTheme": "Catppuccin Mocha",
	"workbench.editor.limit.enabled": true,
	"workbench.list.smoothScrolling": true,
	"workbench.statusBar.visible": false,
	"workbench.editor.showTabs": "none",
	"workbench.layoutControl.enabled": false,
	"workbench.activityBar.orientation": "vertical",
	"workbench.editor.editorActionsLocation": "hidden",

	// -- Language specifics
	"css.validate": false,
	"typescript.updateImportsOnFileMove.enabled": "always",
	"workbench.sideBar.location": "right"
}
